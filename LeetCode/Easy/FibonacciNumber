class Solution {
    public int fib(int n) {
        if(n < 2) return n;
        
        int[] arr = new int[n+1]; //f(0),...,f(n) 값을 저장할 배열
        arr[0] = 0; //f(0) = 0
        arr[1] = 1; //f(1) = 1

        for(int i = 2 ; i <= n ; i++){
            arr[i] = arr[i-1] + arr[i-2]; // f(n) = f(n-1) + f(n-2)
        }
        
        return arr[n]; //f(n) 값 리턴
    }
}
