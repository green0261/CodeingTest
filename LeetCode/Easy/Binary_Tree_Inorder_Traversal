class Solution {

    public List<Integer> inorderTraversal(TreeNode root) {
        List<Integer> list = new ArrayList<>(); //결과 반환 리스트

        inorder(root, list); //중위 순회 메서드

        return list;
    }
    
    //중위 순회를 수행하는 재귀 메서드 (Left -> Root -> Right)
    public void inorder(TreeNode node, List<Integer> list){
        //노드가 null이면 메서드 종료
        if(node == null) return;
        
        //1. 왼쪽 자식 노드 기준으로 중위 순회
        inorder(node.left, list);

        //2. 현재 노드의 값 저장
        list.add(node.val);
        
        //3. 오른쪽 자식 노드 기준으로 중위 순회
        inorder(node.right, list);

    }
}
