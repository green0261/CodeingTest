class Solution {
    public int climbStairs(int n) {
        if(n <= 2) return n;
        
        //1. 계산된 결과값을 저장할 배열 생성(arr[n-1] == DP[n])
        int[] arr = new int[n];

        //1. 초기값 정의
        arr[0] = 1; //계단 한 개를 오르는 방법 : 1개
        arr[1] = 2; //계단 두 개를 오르는 방법 : 2개
        
        //2. 점화식을 이용해 계산
        for(int i = 2; i < n ; i++){
            arr[i] = arr[i-1]+arr[i-2]; //점화식
        }

        return arr[n-1]; //n번째 계단을 오르는 총 경우의 수 반환
    }
}
